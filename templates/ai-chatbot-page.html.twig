{#
  Expects variables:
  - color: Widget color (hex)
  - avatar: Avatar image URL
  - welcome_message: Welcome message
  - display_mode: 'inline'|'floating'|'modal'
#}
{#
  Theme suggestion for ai_chatbot_page:
  - ai-chatbot-page--[route-name].html.twig
  - ai-chatbot-page.html.twig
#}
{% extends "@page.html.twig" %}
{% block content %}
  <div id="ai-chatbot-page"
       class="ai-chatbot-widget ai-chatbot-{{ display_mode|default('floating') }}"
       style="{% if color %}--ai-chatbot-color: {{ color }};{% endif %}">
    <div class="ai-chatbot-header">
      {% if avatar %}
        <img src="{{ avatar }}" alt="Chatbot avatar" class="ai-chatbot-avatar" />
      {% endif %}
      <span class="ai-chatbot-welcome">{{ welcome_message|default('Hi! How can I help you?') }}</span>
    </div>
    <div class="ai-chatbot-messages">
      {# Chatbot messages will be rendered here #}
    </div>
    <div class="ai-chatbot-input">
      {# Chatbot input form will be rendered here #}
    </div>
  </div>
{% endblock %}
