{% extends "@block/block.html.twig" %}
{#
  Theme suggestion for ai_chatbot_plus_block:
  - ai-chatbot-plus-block--[block-id].html.twig
  - ai-chatbot-plus-block--[region].html.twig
  - ai-chatbot-plus-block.html.twig
#}
{% block content %}
  {#
    Expects variables:
    - color: Widget color (hex)
    - avatar: Avatar image URL
    - welcome_message: Welcome message
    - display_mode: 'inline'|'floating'|'modal'
  #}
  <div id="ai-chatbot-plus-block"
       class="ai-chatbot-plus-widget ai-chatbot-plus-{{ display_mode|default('floating') }}"
       style="{% if color %}--ai-chatbot-plus-color: {{ color }};{% endif %}">
    {% if block_title %}
      <div class="ai-chatbot-plus-block-title">{{ block_title }}</div>
    {% endif %}
    <div class="ai-chatbot-plus-header">
      {% if avatar %}
        <img src="{{ avatar }}" alt="Chatbot avatar" class="ai-chatbot-plus-avatar" />
      {% endif %}
      <span class="ai-chatbot-plus-welcome">{{ welcome_message|default('Hi! How can I help you?') }}</span>
    </div>
    <div class="ai-chatbot-plus-messages">
      {# Chatbot messages will be rendered here #}
    </div>
    <div class="ai-chatbot-plus-input">
      {# Chatbot input form will be rendered here #}
    </div>
  </div>
{% endblock %}
