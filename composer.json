{
  "name": "drupal/ai_chatbot",
  "description": "A robust, configurable Drupal 11 module that brings conversational AI to your site. Features admin UI, block, theming, analytics and more.",
  "type": "drupal-module",
  "require": {
    "rumenx/php-chatbot": "^1.0"
  },
  "authors": [
    {
      "name": "Rumen Damyanov",
      "email": "contact@rumenx.com",
      "homepage": "https://www.drupal.org/u/rumenx"
    }
  ],
  "homepage": "https://www.drupal.org/project/ai_chatbot",
  "support": {
    "source": "https://git.drupalcode.org/project/ai_chatbot"
  },
  "scripts": {
    "test": "phpunit --configuration=phpunit.xml.dist --testsuite=unit",
    "test-functional": "phpunit --configuration=phpunit.xml.dist --testsuite=functional",
    "test-coverage": "phpunit --configuration=phpunit.xml.dist --coverage-html=coverage --testsuite=unit",
    "phpcs": "phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme ./src ./tests ./ai_chatbot.module ./ai_chatbot.routing.yml ./ai_chatbot.services.yml ./ai_chatbot.info.yml",
    "phpstan": "phpstan analyse ./src ./tests ./ai_chatbot.module ./ai_chatbot.routing.yml ./ai_chatbot.services.yml ./ai_chatbot.info.yml --level=max"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10",
    "mglaman/phpstan-drupal": "^1.2"
  },
  "minimum-stability": "beta"
}
